{
  "doctype": "DocType",
  "name": "Work Option",
  "engine": "InnoDB",
  "module": "Migration Portal",
  "naming_rule": "Expression",
  "autoname": "format:WORK-{######}",
  "show_title_field_in_link": 1,
  "title_field": "job_title",
  "search_fields": "job_title,company_name,country,industry",
  "fields": [
    {
      "fieldname": "job_section",
      "fieldtype": "Section Break",
      "label": "Job Information"
    },
    {
      "fieldname": "job_title",
      "fieldtype": "Data",
      "label": "Job Title",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "company_name",
      "fieldtype": "Data",
      "label": "Company Name",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "website",
      "fieldtype": "Data",
      "label": "Website",
      "options": "URL"
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "country",
      "fieldtype": "Link",
      "label": "Country",
      "options": "Country",
      "reqd": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "city",
      "fieldtype": "Data",
      "label": "City",
      "in_standard_filter": 1
    },
    {
      "fieldname": "industry",
      "fieldtype": "Data",
      "label": "Industry",
      "reqd": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "details_section",
      "fieldtype": "Section Break",
      "label": "Job Details"
    },
    {
      "fieldname": "job_description",
      "fieldtype": "Text Editor",
      "label": "Job Description",
      "reqd": 1
    },
    {
      "fieldname": "responsibilities",
      "fieldtype": "Text Editor",
      "label": "Responsibilities"
    },
    {
      "fieldname": "column_break_2",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "contract_type",
      "fieldtype": "Select",
      "label": "Contract Type",
      "options": "Full-time\nPart-time\nContract\nTemporary\nInternship",
      "reqd": 1
    },
    {
      "fieldname": "job_level",
      "fieldtype": "Select",
      "label": "Job Level",
      "options": "Entry Level\nMid Level\nSenior Level\nManagement\nExecutive",
      "reqd": 1
    },
    {
      "fieldname": "application_deadline",
      "fieldtype": "Date",
      "label": "Application Deadline"
    },
    {
      "fieldname": "financial_section",
      "fieldtype": "Section Break",
      "label": "Financial Information"
    },
    {
      "fieldname": "salary_range_min",
      "fieldtype": "Currency",
      "label": "Minimum Salary"
    },
    {
      "fieldname": "salary_range_max",
      "fieldtype": "Currency",
      "label": "Maximum Salary"
    },
    {
      "fieldname": "salary_currency",
      "fieldtype": "Link",
      "label": "Currency",
      "options": "Currency",
      "default": "USD"
    },
    {
      "fieldname": "column_break_3",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "salary_period",
      "fieldtype": "Select",
      "label": "Salary Period",
      "options": "Per Year\nPer Month\nPer Week\nPer Hour"
    },
    {
      "fieldname": "benefits",
      "fieldtype": "Small Text",
      "label": "Benefits"
    },
    {
      "fieldname": "requirements_section",
      "fieldtype": "Section Break",
      "label": "Requirements"
    },
    {
      "fieldname": "education_requirements",
      "fieldtype": "Small Text",
      "label": "Education Requirements"
    },
    {
      "fieldname": "experience_requirements",
      "fieldtype": "Small Text",
      "label": "Experience Requirements",
      "reqd": 1
    },
    {
      "fieldname": "column_break_4",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "skills_required",
      "fieldtype": "Small Text",
      "label": "Skills Required",
      "reqd": 1
    },
    {
      "fieldname": "language_requirements",
      "fieldtype": "Small Text",
      "label": "Language Requirements",
      "reqd": 1
    },
    {
      "fieldname": "visa_requirements",
      "fieldtype": "Small Text",
      "label": "Visa/Work Permit Requirements",
      "reqd": 1
    },
    {
      "fieldname": "attachments_section",
      "fieldtype": "Section Break",
      "label": "Attachments"
    },
    {
      "fieldname": "job_posting",
      "fieldtype": "Attach",
      "label": "Job Posting Document"
    },
    {
      "fieldname": "notes_section",
      "fieldtype": "Section Break",
      "label": "Notes"
    },
    {
      "fieldname": "notes",
      "fieldtype": "Small Text",
      "label": "Notes"
    }
  ],
  "permissions": [
    {
      "role": "Migration Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    },
    {
      "role": "Migration Consultant",
      "read": 1,
      "write": 1,
      "create": 1
    },
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    }
  ]
} 