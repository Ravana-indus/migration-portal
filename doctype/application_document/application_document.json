{
    "doctype": "DocType",
    "name": "Application Document",
    "module": "Migration Portal",
    "is_table": 1,
    "fields": [
        {
            "fieldname": "document_type",
            "fieldtype": "Select",
            "options": "Passport\nID Card\nBirth Certificate\nEducation Certificate\nTranscripts\nLanguage Test\nBank Statement\nFinancial Support\nVisa Application Form\nPhotographs\nResume/CV\nStatement of Purpose\nReference Letter\nMedical Certificate\nEmployment Letter\nIncome Proof\nOther",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "document_name",
            "fieldtype": "Data",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "status",
            "fieldtype": "Select",
            "options": "Required\nReceived\nVerified\nRejected\nNot Required",
            "default": "Required",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "required_by",
            "fieldtype": "Date"
        },
        {
            "fieldname": "submission_date",
            "fieldtype": "Date",
            "depends_on": "eval:doc.status!='Required' && doc.status!='Not Required'"
        },
        {
            "fieldname": "document_file",
            "fieldtype": "Attach"
        },
        {
            "fieldname": "notes",
            "fieldtype": "Small Text"
        }
    ]
}