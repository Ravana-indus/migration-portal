{
  "doctype": "DocType",
  "name": "Work Option",
  "engine": "InnoDB",
  "module": "Migration Portal",
  "naming_rule": "Set by user",
  "autoname": "field:job_title", 
  "show_title_field_in_link": 1,
  "title_field": "job_title",
  "search_fields": "job_title,company_name,location,job_category",
  "fields": [
    {
      "fieldname": "job_title",
      "fieldtype": "Data",
      "label": "Job Title",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "unique": 1
    },
    {
      "fieldname": "company_name",
      "fieldtype": "Data",
      "label": "Company Name",
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "job_category",
      "fieldtype": "Link", 
      "label": "Job Category",
      "options": "Job Category",
      "in_standard_filter": 1
    },
    {
      "fieldname": "location",
      "fieldtype": "Data",
      "label": "Location (City, Country)",
      "in_list_view": 1
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "employment_type",
      "fieldtype": "Select",
      "label": "Employment Type",
      "options": "Full-time\nPart-time\nContract\nTemporary\nInternship"
    },
    {
        "fieldname": "work_permit_required",
        "fieldtype": "Check",
        "label": "Work Permit Required"
    },
    {
        "fieldname": "visa_sponsorship_available",
        "fieldtype": "Check",
        "label": "Visa Sponsorship Available"
    },
    {
      "fieldname": "details_section",
      "fieldtype": "Section Break",
      "label": "Job Details"
    },
    {
      "fieldname": "job_description",
      "fieldtype": "Text Editor",
      "label": "Job Description"
    },
    {
      "fieldname": "responsibilities",
      "fieldtype": "Text Editor",
      "label": "Responsibilities"
    },
    {
      "fieldname": "requirements_section",
      "fieldtype": "Section Break",
      "label": "Requirements"
    },
    {
      "fieldname": "qualifications",
      "fieldtype": "Small Text",
      "label": "Qualifications"
    },
    {
      "fieldname": "experience_required",
      "fieldtype": "Data",
      "label": "Experience Required (Years)"
    },
    {
      "fieldname": "skills_required",
      "fieldtype": "Small Text",
      "label": "Skills Required"
    },
    {
      "fieldname": "financials_section",
      "fieldtype": "Section Break",
      "label": "Compensation & Benefits"
    },
    {
      "fieldname": "salary_range",
      "fieldtype": "Data",
      "label": "Salary Range"
    },
    {
      "fieldname": "currency",
      "fieldtype": "Link",
      "label": "Currency",
      "options": "Currency",
      "default": "USD"
    },
    {
      "fieldname": "benefits",
      "fieldtype": "Small Text",
      "label": "Benefits"
    }
  ],
  "permissions": [
    {
      "role": "Migration Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    },
    {
      "role": "Migration Consultant",
      "read": 1,
      "write": 1,
      "create": 1
    },
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    }
  ]
} 